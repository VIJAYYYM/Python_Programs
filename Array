import array

# Create an array of integers
int_array = array.array('i', [1, 2, 3, 4, 5])

# Access elements of the array
print("Array elements:")
for element in int_array:
    print(element)

# Add an element to the array
int_array.append(6)

# Remove an element from the array
int_array.remove(3)

# Insert an element at a specific position
int_array.insert(2, 7)

# Find the index of an element in the array
index = int_array.index(4)

# Get the length of the array
length = len(int_array)

# Convert the array to a list
int_list = int_array.tolist()

# Print the updated array and other information
print("\nUpdated Array elements:")
for element in int_array:
    print(element)

print("\nIndex of 4:", index)
print("Length of the array:", length)
print("Array converted to a list:", int_list)
